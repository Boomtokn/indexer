{
  "name": "across-indexer-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "fix": "turbo fix",
    "check": "turbo check",
    "test": "turbo test",
    "start:indexer": "APP=indexer pnpm --filter @repo/node-app start",
    "start:template": "APP=template pnpm --filter @repo/node-app start",
    "start:persistence-example": "APP=persistence-example pnpm --filter @repo/node-app start",
    "prepare": "husky",
    "dev-env:up": "docker-compose up -d --build",
    "dev-env:down": "docker-compose down",
    "dev-env:run-app:indexer": "docker-compose exec app sh -c \"pnpm start:indexer\"",
    "dev-env:run-app:template": "docker-compose exec app sh -c \"pnpm start:template\"",
    "dev-env:run-app:persistence-example": "docker-compose exec app sh -c \"pnpm start:persistence-example\""
  },
  "devDependencies": {
    "turbo": "^2.0.10",
    "husky": "^9.1.4"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
